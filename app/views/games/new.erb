<h3>Create a new game review</h3>
<form method="POST" action="/games">
    <label for="title">Title: </label>
    <input type="text" name="title" value="<%= @g ? @g.title : ""%> ">
    <label for="genre">Genre: </label>
    <input type="text" name="genre" value="<%= @g ? @g.genre : ""%> ">
    <label for="rating">Rating: </label>
    <input type="integer" name="rating" value="<%= @g ? @g.rating : ""%> ">
    <input type="submit">
</form>