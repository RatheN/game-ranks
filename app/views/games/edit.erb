<h1>Edit a game review</h1>
<form method="POST" action="/games/<%= @game.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="title">Title</label>
    <input type="text" value= " <%= @game.title %>" name="title">
    <label for="genre">Genre</label>
    <input type="text" value= " <%= @game.genre %>" name="genre">
    <label for="rating">Rating</label>
    <input type="integer" value= " <%= @game.rating %>" name="rating">
    <input type="submit">
</form>