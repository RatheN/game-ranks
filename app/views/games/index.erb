
<h3>Welcome, <%= @user.name %>.</h3>
<br>
<br>
    
<% if @games == [] %>
    <h4>You have not reviewed any games yet.</h4>
    <p><a href="/games/new">create a new game review</a></p>
<% else %>
    <h2>Your game reviews:</h2>
    <% @games.each do |g| %>
        <h3><a href="/games/<%= g.id %>"><%= g.title %></a></h3>
    <% end %>
    
<% end %>
